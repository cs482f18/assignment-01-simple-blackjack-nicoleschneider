<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/blackjackapp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/card0"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:text="Card 0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        android:background="#fff"
        />

    <TextView
        android:id="@+id/card1"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:text="Card 1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        app:layout_constraintLeft_toRightOf="@+id/card0"
        android:layout_marginLeft="20dp"
        android:background="#fff"
        />

    <TextView
        android:id="@+id/card2"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:text="Card 2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        app:layout_constraintLeft_toRightOf="@+id/card1"
        android:layout_marginLeft="20dp"
        android:background="#fff"
        />

    <TextView
        android:id="@+id/card3"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:text="Card 3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        app:layout_constraintLeft_toRightOf="@+id/card2"
        android:layout_marginLeft="20dp"
        android:background="#fff"
        />

    <TextView
        android:id="@+id/card4"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:text="Card 4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        app:layout_constraintLeft_toRightOf="@+id/card3"
        android:layout_marginLeft="20dp"
        android:background="#fff"
        />

    <TextView
        android:id="@+id/dealercard0"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:text="DealerCard 1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="20dp"
        android:background="#fff"
        />

    <TextView
        android:id="@+id/dealercard1"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:text="DealerCard 1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/dealercard0"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="20dp"
        android:background="#fff"
        />

    <TextView
        android:id="@+id/dealercard2"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:text="DealerCard 1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/dealercard1"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="20dp"
        android:background="#fff"
        />

    <TextView
        android:id="@+id/dealercard3"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:text="DealerCard 1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/dealercard2"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="20dp"
        android:background="#fff"
        />

    <TextView
        android:id="@+id/dealercard4"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:text="DealerCard 1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/dealercard3"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="20dp"
        android:background="#fff"
        />

    <TextView
        android:id="@+id/winnerdisplay"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="DealerCard 1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="20dp"
        android:background="#fff"
        />

    <Button
        android:id="@+id/hit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hit"
        android:onClick="userHit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.965" />

    <Button
        android:id="@+id/stand_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stand"
        android:onClick="userStand"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.965" />

    <Button
        android:id="@+id/new_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:onClick="newGame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.965" />

</android.support.constraint.ConstraintLayout>
